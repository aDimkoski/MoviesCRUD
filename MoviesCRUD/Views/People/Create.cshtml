@model MoviesCRUD.Models.Person

@{
    ViewData["Title"] = "Create";
    List<Role> roles = ViewBag.roles;
}

<h1>Create</h1>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                  <label asp-for="Roles">Choose a role:</label>
                  <select asp-for="Roles" class="form-control" multiple>
                          @foreach(var obj in roles)
                            {
                                <option value="@obj.Id">@obj.Name</option>
                            }
                  </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
